<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    tools:context=".views.activities.AddReminderActivity">

    <include
        android:id="@+id/include_action_bar"
        layout="@layout/actionbar_common" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include_action_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_16dp">


                <TextView
                    android:id="@+id/txt_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_title"
                    android:layout_marginTop="24dp"
                    android:background="@android:color/transparent"
                    android:hint="Category"
                    android:inputType="textCapSentences"
                    android:text=""
                    android:textColor="@color/app_black"
                    android:textColorHint="@color/app_black"
                    android:textSize="@dimen/label_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view_title" />

                <View
                    android:id="@+id/view_category"
                    android:layout_width="match_parent"
                    android:layout_height="1.3dp"
                    android:layout_below="@+id/txt_category"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bottom_line_effets" />

                <View
                    android:id="@+id/view_title_name_circle"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignTop="@+id/txt_category"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_circle_user_registration" />


                <TextView
                    android:id="@+id/txt_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_category"
                    android:layout_marginTop="24dp"
                    android:background="@android:color/transparent"
                    android:hint="Item"
                    android:inputType="textCapSentences"
                    android:textColor="@color/app_black"
                    android:textColorHint="@color/app_black"
                    android:textSize="@dimen/label_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view_title" />

                <View
                    android:id="@+id/view_item"
                    android:layout_width="match_parent"
                    android:layout_height="1.3dp"
                    android:layout_below="@+id/txt_item"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bottom_line_effets" />

                <View
                    android:id="@+id/view_item_name_circle"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignTop="@+id/txt_item"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_circle_user_registration" />


                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/view_item"
                    android:layout_marginTop="24dp"
                    android:gravity="center_vertical"
                    android:hint="Date"
                    android:text=""
                    android:textColor="@color/app_black"
                    android:textColorHint="@color/app_black"
                    android:textSize="@dimen/label_text" />


                <View
                    android:id="@+id/view_date"
                    android:layout_width="match_parent"
                    android:layout_height="1.3dp"
                    android:layout_below="@+id/txt_date"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bottom_line_effets" />

                <View
                    android:id="@+id/view_date_name_circle"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignTop="@+id/txt_date"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_circle_user_registration" />



                <TextView
                    android:id="@+id/txt_from"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/view_date"
                    android:layout_marginTop="24dp"
                    android:gravity="center_vertical"
                    android:hint="From (Time)"
                    android:text=""
                    android:textColor="@color/app_black"
                    android:textColorHint="@color/app_black"
                    android:textSize="@dimen/label_text" />


                <View
                    android:id="@+id/view_from"
                    android:layout_width="match_parent"
                    android:layout_height="1.3dp"
                    android:layout_below="@+id/txt_from"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bottom_line_effets" />

                <View
                    android:id="@+id/view_from_name_circle"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignTop="@+id/txt_from"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_circle_user_registration" />


                <TextView
                    android:id="@+id/txt_to"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/view_from"
                    android:layout_marginTop="24dp"
                    android:gravity="center_vertical"
                    android:hint="To (Time)"
                    android:text=""
                    android:textColor="@color/app_black"
                    android:textColorHint="@color/app_black"
                    android:textSize="@dimen/label_text" />


                <View
                    android:id="@+id/view_to"
                    android:layout_width="match_parent"
                    android:layout_height="1.3dp"
                    android:layout_below="@+id/txt_to"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bottom_line_effets" />

                <View
                    android:id="@+id/view_to_name_circle"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignTop="@+id/txt_to"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_circle_user_registration" />

                <TextView
                    android:id="@+id/txt_priority"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/view_to"
                    android:layout_marginTop="24dp"
                    android:gravity="center_vertical"
                    android:hint="Priority"
                    android:textColor="@color/app_black"
                    android:textColorHint="@color/app_black"
                    android:textSize="@dimen/label_text" />


                <View
                    android:id="@+id/view_priority"
                    android:layout_width="match_parent"
                    android:layout_height="1.3dp"
                    android:layout_below="@+id/txt_priority"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bottom_line_effets" />


                <TextView
                    android:id="@+id/txt_radius"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/view_priority"
                    android:layout_marginTop="24dp"
                    android:gravity="center_vertical"
                    android:hint="Radius"
                    android:textColor="@color/app_black"
                    android:textColorHint="@color/app_black"
                    android:textSize="@dimen/label_text" />


                <View
                    android:id="@+id/view_radius"
                    android:layout_width="match_parent"
                    android:layout_height="1.3dp"
                    android:layout_below="@+id/txt_radius"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bottom_line_effets" />


                <EditText
                    android:id="@+id/txt_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_radius"
                    android:layout_marginTop="24dp"
                    android:background="@android:color/transparent"
                    android:hint="Remark"
                    android:inputType="textCapSentences"
                    android:text=""
                    android:maxLength="25"
                    android:textColor="@color/app_black"
                    android:textColorHint="@color/app_black"
                    android:textSize="@dimen/label_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view_title" />


                <View
                    android:id="@+id/view_remark"
                    android:layout_width="match_parent"
                    android:layout_height="1.3dp"
                    android:layout_below="@+id/txt_remark"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bottom_line_effets" />


                <LinearLayout
                    android:id="@+id/layout_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_remark">

                    <Button
                        android:id="@+id/btn_add_list"
                        android:layout_width="0dp"
                        android:layout_height="43dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn_pink_bg"
                        android:gravity="center"
                        android:text="Add to List"
                        android:textColor="#fff"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btn_save"
                        android:layout_width="0dp"
                        android:layout_height="43dp"
                        android:layout_below="@+id/btn_add_list"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn_pink_bg"
                        android:gravity="center"
                        android:text="Save"
                        android:textColor="#fff"
                        android:visibility="gone" />

                </LinearLayout>


                <TextView
                    android:id="@+id/txt_view_reminder_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_btn"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:text="View Reminder List"
                    android:textColor="@color/app_disabled" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>